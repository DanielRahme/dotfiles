[
  {
    "defaults": {
      "link": {
        "create": true,
        "relink": true
      }
    }
  },
  {
    "clean": [
      "~"
    ]
  },
  {
    "link": {
      "~/.dotfiles": "",
      "~/.config/kitty": ".config/kitty",
      "~/.tmux.conf": "tmux/tmux.conf",
      "~/.vimrc": ".vimrc",
      "~/.config/nvim": {
        "path": ".config/nvim"
      },
      "~/.gitconfig": {
        "path": ".gitconfig"
      },
      "~/.zshrc": {
        "path": ".zshrc"
      }
    }
  },
  {
    "shell": [
      [
        "git submodule update --init --recursive",
        "Installing submodules"
      ]
    ]
  }
]
